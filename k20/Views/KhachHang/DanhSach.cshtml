@model IEnumerable<k20.Models.KhachHang>

@{
    ViewBag.Title = "DanhSach";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<div class="container" style="100px 0px">
    <div class="row">
        <h2>Danh sach khach hang: </h2>

        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.TenKhachHang)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SoDienThoai)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DiaChi)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.TenKhachHang)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SoDienThoai)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DiaChi)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.IdKH }) |
                        @Html.ActionLink("Details", "Details", new { id = item.IdKH }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.IdKH })
                    </td>
                </tr>
            }

        </table>

    </div>
</div>