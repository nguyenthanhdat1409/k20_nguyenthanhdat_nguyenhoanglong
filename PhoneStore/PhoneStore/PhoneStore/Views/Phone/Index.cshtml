@model IEnumerable<PhoneStore.Models.Phone>

@{
    ViewBag.Title = "Index";
    @*Layout = "~/Views/Shared/_Layout.cshtml";*@
}


<style>
    :root {
        --bg-color: #3e3e3f;
    }

    * {
        padding: 0;
        margin: 0;
        box-sizing: border-box;
    }

    body {
        font: 14px/18px Helvetica Neue,Helvetica,Arial,SF Pro Display,sans-serif;
        background-color: var(--bg-color);
    }

    .fixed {
        position: fixed;
        top: 0;
        left: 0;
        z-index: 10000;
    }

    header {
        background-color: #101010;
        width: 100%;
        height: 60px;
    }

    .head {
        display: flex;
        max-width: 1200px;
        min-width: 1024px;
        margin: auto;
        width: 100%;
        height: 60px;
        position: relative;
        justify-content: space-between;
        align-items: center;
    }

    .bg-sg {
        position: fixed;
        display: none;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-color: #000;
        opacity: 0.8;
        z-index: 998;
    }

    a {
        text-decoration: none;
    }

    .logo-topzone {
        float: left;
    }

        .logo-topzone a img {
            display: inline-block;
            width: 200px;
        }

    ul {
        display: block;
        height: 100%;
        align-items: center;
    }

    .menu {
        width: 65%;
        list-style: none;
        float: left;
        display: flex;
        justify-content: space-around;
        align-items: center;
    }

        .menu li {
            display: flex;
            height: 100%;
            text-align: center;
            align-items: center;
            justify-content: center;
            flex: 1;
            cursor: pointer;
        }

    .active {
        background-color: #2f3033;
    }

    .menu li:hover {
        background-color: #2f3033;
    }

    .menu li a span {
        color: #fff;
        text-align: center;
    }



    .search-cart-item {
        display: inline-block;
        justify-content: space-between;
        border-radius: 100%;
        background-color: #2f3033;
        vertical-align: middle;
        width: 40px;
        height: 40px;
        margin-right: 5px;
        padding: 10px;
        cursor: pointer;
    }

        .search-cart-item i {
            text-align: center;
            width: 20px;
            color: #fff;
        }

    .form-search {
        display: flex;
        width: 600px;
        position: absolute;
        animation-name: specialFadeOut;
        transition: opacity .2s cubic-bezier(0.65, 0.05, 0.36, 1);
        z-index: 999;
        height: 60px;
        padding: 20px 5px;
        left: 0;
        right: 0;
        margin: auto;
        background: unset;
        justify-content: space-between;
        align-items: center;
    }

        .form-search i {
            display: block;
            width: 50px;
            color: #fff;
            margin: 0 30px;
        }

        .form-search input {
            border: none;
            flex: 1;
            margin: 0 10px;
            height: 100%;
            background: unset;
            color: #ffffff;
            opacity: 1;
            outline: none;
            font-size: 1rem;
        }

    .none {
        display: none;
    }

    section {
        max-width: 1170px;
        min-width: 1024px;
        margin: auto;
        width: 100%;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        margin-bottom: 100px;
    }

    .logo {
        display: block;
        height: 35px;
        margin: 40px auto;
    }

    .slider {
        max-width: 1200px;
        margin: 0px auto;
        position: relative;
        height: 300px;
    }

        .slider i {
            position: absolute;
            top: 50%;
            transform: translateY(-50%);
            font-size: 15px;
            border-radius: 100%;
            padding: 20px;
            background-color: #222324;
            color: #fff;
            z-index: 10;
            margin: 0 10px;
            cursor: pointer;
        }

            .slider i:hover {
                background-color: #535353;
            }

        .slider .right {
            right: 0;
        }

    .slider-dots {
        display: flex;
        position: absolute;
        justify-content: center;
        list-style: none;
        align-items: center;
        bottom: -120px;
        transform: translateX(-50%);
        left: 50%;
        z-index: 10;
    }

        .slider-dots li {
            display: block;
        }

    .slider-wrapper {
        width: 100%;
        height: 300px;
        overflow: hidden;
        position: relative;
    }

    .slider-main {
        display: flex;
        position: relative;
        transition: transform .5s linear;
    }

    .slider-item {
        height: 100%;
        width: 100%;
        flex: 1 0 100%;
    }

        .slider-item img {
            display: inline-block;
            width: 100%;
            height: 300px;
            border-radius: 20px;
        }



    .filter-cate {
        margin: 30px 0;
        display: flex;
        justify-content: space-between;
        max-width: 30px 0 40px;
        flex-wrap: wrap;
        width: 100%;
        position: relative;
    }

    .ft-cate {
        float: left;
    }

        .ft-cate a {
            display: inline-block;
            color: #afb7bd;
            font-size: 15px;
            margin-right: 15px;
            padding: 8px;
        }

            .ft-cate a:hover {
                opacity: 1;
                border-bottom: 1px solid #fff;
                color: #fff;
            }

        .ft-cate .focus {
            opacity: 1;
            border-bottom: 1px solid #fff;
            color: #fff;
        }

    .ft-sort {
        float: right;
        position: absolute;
        right: 0;
        bottom: -20px;
        cursor: pointer;
    }

        .ft-sort p {
            color: #fff;
            font-size: 17px;
        }

        .ft-sort > p:after {
            content: '';
            width: 8px;
            height: 8px;
            border-right: 1px solid #fff;
            border-bottom: 1px solid #fff;
            transform: rotate(45deg);
            display: inline-block;
            margin: 0 2px 2px 10px;
        }

        .ft-sort ul {
            position: absolute;
            list-style: none;
            color: #000;
            background-color: #fff;
            border-radius: 8px;
            z-index: 1;
            left: 0;
            right: 0;
            top: 40px;
            height: 140px;
            padding: 5px 0;
        }

            .ft-sort ul li {
                display: block;
                padding: 5px 20px;
            }

                .ft-sort ul li i {
                    display: inline-block;
                    margin-right: 5px;
                }

                .ft-sort ul li:hover {
                    color: #0071e3;
                }

    .listing-cate {
        display: grid;
        grid-auto-rows: minmax(min-content,max-content);
        grid-template-columns: repeat(3,minmax(0,1fr));
        gap: 20px;
        margin-bottom: 15px;
    }

    .listing-cate-item {
        float: left;
        background: #323232;
        border-radius: 24px;
        padding: 30px;
        margin: 0;
        box-sizing: border-box;
        cursor: pointer;
        position: relative
    }

        .listing-cate-item:hover {
            box-shadow: 1px 1px 10px 1px rgba(255, 255, 255, .3);
        }

        .listing-cate-item a {
            display: block;
        }

            .listing-cate-item a label {
                position: absolute;
                top: 10px;
                left: 10px;
                color: #ff9f00;
                border: 1px solid #ff9f00;
                border-radius: 100px;
                font-size: 15px;
                line-height: 20px;
                padding: 4px 12px;
                text-align: center
            }

            .listing-cate-item a img {
                display: block;
                max-width: 235px;
                width: 100%;
                height: auto;
                margin: auto;
            }

            .listing-cate-item a .prods-group {
                display: flex;
                align-items: center;
                justify-content: center;
                margin-top: 20px;
            }

    .prods-group-item {
        vertical-align: middle;
        padding: 10px 10px;
        font-size: 14px;
        line-height: 21px;
        color: #dbdbdb;
        background: #222324;
        border-radius: 8px;
        float: left;
        border: 1px solid transparent;
        cursor: pointer;
        margin-bottom: 8px;
        flex: none;
        margin: 0 7px;
    }

        .prods-group-item:hover {
            background: #1c1c1d;
            border: 1px solid #535353;
        }

    .listing-cate-item a h3 {
        padding: 0 10px;
        margin: 12px 0;
        text-align: center;
        font-size: 17px;
        line-height: 20px;
        color: #fff;
    }

    .listing-cate-item a p {
        color: #fff;
        text-align: center;
        font-size: 17px;
        font-weight: bold;
    }

    .listing-cate-item a span {
        display: block;
        color: #757575;
        font-size: 14px;
        line-height: 16px;
        padding-top: 5px;
        text-align: center;
    }
</style>


<table class="table">
    

    <div class="listing-cate">
        @foreach (var item in Model)
        {
            <div class="listing-cate-item">
                <a href="">
                    <label for="">Mới</label>
                    <div class="item-img">
                        <img src="@item.PhoneImg" alt="">
                    </div>
                    <div class="prods-group">
                        <div class="prods-group-item">128GB</div>
                        <div class="prods-group-item">256GB</div>
                        <div class="prods-group-item">512GB</div>
                    </div>
                    <h3> @Html.DisplayFor(modelItem => item.PhoneName)</h3>
                    <p>
                        @Html.DisplayFor(modelItem => item.PhoneName)
                    </p>
                    <span>Đang bán chạy</span>
                    @Html.ActionLink("Buy", "AddCart", new { id = item.PhoneID })|
                    @Html.ActionLink("Details", "Details", new { id = item.PhoneID })|
                </a>
            </div>
        }
    </div>

</table>
